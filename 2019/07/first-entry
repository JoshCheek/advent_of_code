#!/usr/bin/env ruby
require_relative '../09/intcode'

require 'stringio'

p [0,1,2,3,4].permutation.map { |phase_settings|
  pipes = phase_settings.map { |phase_setting|
    IO.pipe.tap { |_read, write| write.puts phase_setting }
  }
  reads, writes = pipes.transpose
  output, tmp = IO.pipe.tap { |_, write| writes << write }
  input = writes.shift
  input.puts 0
  input.close

